@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.IdCurso)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Designação)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataFim)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastUpdate)
        </td>*@
        <td>
            @Html.ActionLink("Editar turma", "Edit", new { id=item.IdTurma }, new { @class = "my-class" }) |
            @Html.ActionLink("Detalhes da turma", "Details", new { id=item.IdTurma }, new { @class = "my-class" }) |
            @Html.ActionLink("Apagar turma", "Delete", new { id=item.IdTurma }, new { @class = "my-class" })
        </td>
    </tr>
}

</table>
