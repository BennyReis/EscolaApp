@model IEnumerable<EscolaApp.Models.Turma>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron">
    <h1>Turmas</h1>
</div>

<p>
    @Html.ActionLink("Adicionar Turma", "Create", null, new { @class = "my-class" })
</p>
<table class="table custom">
    <thead>
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.IdCurso)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Designação)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataFim)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastUpdate)
            </th>*@
            <th></th>
        </tr>
