@model EscolaApp.Models.Email

@{
    ViewBag.Title = "CreateViaAlunos";
}

<h3>Adicionar email</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal custom">
        <h4>Email</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <dl class="dl-horizontal">
                <dt>
                    Aluno
                </dt>

                <dd>
                    @ViewBag.Aluno
                </dd>
        </dl>
        <hr/>
        <dl class="dl-horizontal">
                <dt>
                    Email
                </dt>
                <dd>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email1, "", new { @class = "text-danger" })
                    </div>
                </dd>
        </dl>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index", null, new { @class = "my-class" })
</div>
