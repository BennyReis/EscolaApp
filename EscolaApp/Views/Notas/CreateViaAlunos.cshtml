@model EscolaApp.Models.Nota

@{
    ViewBag.Title = "Create";
}

<h3>Adicionar nota Aluno - @ViewBag.Aluno</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal custom">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @*lista os alunos*@
        <div class="form-group">
        @Html.Label("Aluno", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <span class="form-control">@ViewBag.Aluno</span>
            @Html.ValidationMessageFor(model => model.IdAluno, "", new { @class = "text-danger" })
        </div>
    </div>

        @*lista as ufcds*@
    <div class="form-group">
        @Html.Label("UFCD", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("IdUFCD", null, new { @class = "list-control" })
            @Html.ValidationMessageFor(model => model.IdUFCD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nota", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nota1, new 
       { 
           htmlAttributes = new 
           { 
               @class = "form-control", 
               @min = "1", 
               @max = "20" , 
               @step = "1", 
               @oninput= "(validity.valid) || (value = '');" 
           } 
       })
            @Html.ValidationMessageFor(model => model.Nota1, "", new { @class = "text-danger" })
        </div>
    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Adicionar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Details", "Alunos", new { id = ViewBag.Aluno.IdAluno }, new { @class = "my-class" })
</div>
